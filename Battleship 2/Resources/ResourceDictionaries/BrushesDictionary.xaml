<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundBrush" Color="#99000000"/>
    <SolidColorBrush x:Key="MainStyleColor" Color="SteelBlue"/>

    <LinearGradientBrush x:Key="TitleLinearGradient" EndPoint="0,1">
        <GradientStop Color="#FF4C58A9"/>
        <GradientStop Color="#FF8193AB" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MenuButtonsLinearGradient" EndPoint="0,1">
        <GradientStop Color="#FF2E294B"/>
        <GradientStop Color="#FF8193AB" Offset="0.5"/>
    </LinearGradientBrush>
</ResourceDictionary>